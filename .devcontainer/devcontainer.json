{
  "name": "dev-${localWorkspaceFolderBasename}",
  "dockerComposeFile": "./docker/docker-compose.backend-postgres.yml",
  "service": "api-postgres",
  "workspaceFolder": "/workspaces/app",
  "shutdownAction": "stopCompose",
  "updateRemoteUserUID": false,
  "remoteEnv": {
    "VSCODE_SERVER_DIR": "/vscode/vscode-server",
    "CODEX_HOME": "/home/vscode/.codex"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "nurlybekovnt.csharpextensions",
        "adrianwilczynski.user-secrets",
        "patcx.vscode-nuget-gallery",
        
        "openai.chatgpt",
        "github.vscode-pull-request-github",
        "maptz.regionfolder",
        "PKief.material-icon-theme",
        "johnpapa.vscode-peacock",
        "Gruntfuggly.todo-tree"
      ]
    }
  }
}